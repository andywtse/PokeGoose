              <h6 class="card-subtitle mb-2 text-muted">
                <% team.pokemon?.forEach(pokemon => { %>
                  <img src="<%= pokemon.icon%>" alt="<%= pokemon.name %>">
                <% }) %>
              </h6>
              <p class="card-text">
                <%= team.description %> 
              </p>
            </div>
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <p> There are currently no items </p>
    <% } %>
    </div>
  </section>

  <section class="section-container box3">
    <h2> My Teams </h2>
    <% if (myTeams.length !== 0 ) { %> 
    <div class="card-container">
      <% myTeams.forEach(team => { %>
        <a href="/teams/<%= team._id %>">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= team.title %> </h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <% team.pokemon?.forEach(pokemon => { %>
                  <img src="<%= pokemon.icon%>" alt="<%= pokemon.name %>">
                <% }) %>
              </h6>
              <p class="card-text">
                <%= team.description %> 
              </p>
            </div>
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <p> There are currently no items </p>
    <% } %>
    </div>
  </section>
  <% } %>
</main>

