<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>

<main>
  <h1><%= title %> </h1>
  <section class="section-container box1">
    <h2> Community </h2>
    <% if (allTeams.length !== 0 ) { %> 
    <div class="card-container">
      <% allTeams.forEach(team => { %>
        <a href="/teams/<%= team._id %>">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= team.title %> </h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <% team.pokemon?.forEach(pokemon => { %>
                  <img src="<%= pokemon.icon%>" alt="<%= pokemon.name %>">
                <% }) %>
              </h6>
              <p class="card-text">
                <%= team.description %> 
              </p>
            </div>
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <p> There is currently no items </p>
    <% } %>
    </div>
  </section>

  <% if (loggedIn) { %> 
  <section class="section-container box2">
    <h2> My Favorites </h2>
    <% if (favorites.length !== 0 ) { %> 
    <div class="card-container">
      <% favorites.forEach(team => { %>
        <a href="/teams/<%= team._id %>">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
