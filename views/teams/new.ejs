<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1>
    <%= title %>
  </h1>

  <section class="section-container">
    <form id="new-team-form" action="/teams" method="POST">
      <section class="section-container box-title-desc">
        <label for="title-input">Title:</label>
        <input type="text" name="title" id="input-title" placeholder="Enter a title...">
        <label for="title-input">Description:</label>
        <input type="text" name="description" id="input-title" placeholder="Enter a description...">
      </section>
      <section class="section-container box-pokemon">
        <div class="card-container">
          <% for ( let i = 0; i < 6; i++ ) { %>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">
                <label for="pokemon-name-select<%= i %>" class="form-label">Pokemon:</label>
                <input name="name" class="form-control" id="pokemon-name-select<%= i %>" list="pokemon-name-dlo" placeholder="Type to search...">
                <datalist id="pokemon-name-dlo">
                  <% pokemons.forEach(pokemon=> { %>
                    <option value="<%= pokemon.name %>">
                      <% }) %>
                </datalist>
              </h5>
              <h6 class="card-text">
                <label for="pokemon-moves-input<%=i%>" class="form-label">Moves:</label>
                <input type="text" name="moves" id="pokemon-moves-input<%=i%>"
                  placeholder="Enter up to 4 moves separated by commas (,)">
              </h6>
            </div>
          </div>
        </div>
        <% } %>
      </section>
      <button type="submit">Create Team</button>
    </form>
  </section>
</main>

<%- include('../partials/footer') %>